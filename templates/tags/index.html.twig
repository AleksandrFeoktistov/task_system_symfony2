{% extends 'base.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block body %}
    <h1>Tags index</h1>
    <div class="container">
      <div class="row">
        <div class="col-sm">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('tags_show', {'id': tag.id}) }}">show ticket</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     </div>
   </div>
 </div>
{% endblock %}
