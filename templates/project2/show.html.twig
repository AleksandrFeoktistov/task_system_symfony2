{% extends 'base.html.twig'%}
{% block title %}Project2{% endblock %}
{% block body %}
    <h1>Project2</h1>
    <table class="table table-striped table-dark">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ project2.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ project2.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ project2.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('project2_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('project2_edit', {'id': project2.id}) }}">edit</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('project2/_delete_form.html.twig') }}
    {% endif %}
    <td><a href="{{ path('tickets_new', {'id': project2.id}) }}">create new ticket</a><td>
    <table class="table table-striped table-dark">
       <thead>
         <tr>
           <th>ID</th>
           <th>Name</th>
           <th>Description</th>
           <th>Task/Bug</th>
           <th>Status</th>
           <th>assigned_id</th>
           <th>file</th>
           <th>project_id</th>
           <th>creator_id</th>
         </tr>
       </thead>
       <tbody>
       {% for ticket in tickets %}
       <tr>
            <td>{{ ticket.id }}</td>
            <td><a href="{{ path('tickets_show',{'id': ticket.id}) }}">{{ ticket.name }}</a></td>
            <td>{{ ticket.description }}</td>
            <td>{{ ticket.type }}</td>
            <td>{{ ticket.status }}</td>
            <td>{{ ticket.assignedid }}</td>
            <td>{{ ticket.file }}</td>
            <td>{{ ticket.projectId}}</td>
            <td>{{ ticket.createrId}}</td>
            <td><a href="{{ path('tickets_delete', {'id': ticket.id}) }}">delete</a><td>
            <td><a href="{{ path('tickets_show', {'id': ticket.id}) }}">edit</a><td>
      </tr>
      {% endfor %}
      </tbody>

{% endblock %}
