{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    <h1>Tickets</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ticket.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ticket.type }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ ticket.status }}</td>
            </tr>
            <tr>
                <th>Assigned_id</th>
                <td>{{ ticket.assignedId }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ ticket.file }}</td>
            </tr>
            <tr>
                <th>Project_id</th>
                <td>{{ ticket.projectId }}</td>
            </tr>
            <tr>
                <th>Creater_id</th>
                <td>{{ ticket.createrId }}</td>
