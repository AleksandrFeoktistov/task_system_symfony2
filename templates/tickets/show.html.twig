{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    <h1>Tickets</h1>
    <div class="container">
      <div class="row">
        <div class="col-sm">
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ticket.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ticket.type }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ ticket.status }}</td>
            </tr>
            <tr>
                <th>Assigned_id</th>
                <td>{{ ticket.assignedId }}</td>
            </tr>
            <tr>
                <th>Project_id</th>
                <td>{{ ticket.projectId }}</td>
            </tr>
            <tr>
                <th>Creater_id</th>
                <td>{{ ticket.createrId }}</td>
            </tr>
        </tbody>
    </table>
     </div>
   </div>
 </div>
<div class="container">
 <div class="row">
  <div class="col-sm">
    <a href="{{ path('tickets_index') }}">back to list</a>
    <a href="{{ path('tickets_edit', {'id': ticket.id}) }}">edit</a>
    <a href="{{ asset('uploads/brochures/' ~ ticket.brochure) }}">View brochure (PDF)</a>
    {{ include('tickets/_delete_form.html.twig') }}
    <td><a href="{{ path('comments_new', {'id': ticket.id }) }}">create new comment</a><td>
    </div>
  </div>
</div>
    <h1>Comments</h1>
    <div class="container">
      <div class="row">
        <div class="col-sm">
    <table class="table table-striped table-dark">
        <tbody>
          {% for comment in comments %}
              <tr>
                  <td>{{ comment.id }}</td>
                  <td>{{ comment.text }}</td>
                  <td>{{ comment.userId }}</td>
                  <td>
                      <a href="{{ path('comments_show', {'id': comment.id}) }}">show</a>
                      {% if is_granted('editcomments', comment) %}
                      <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
                      {% endif %}
                  </td>
              </tr>
          {% endfor %}
        </tbody>
    </table>
      </div>
    </div>
  </div>
{% endblock %}
